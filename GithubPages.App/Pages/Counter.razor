@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<FluentButton OnClick="IncrementCount" IconEnd="new Icons.Regular.Size16.Add()">Click me</FluentButton>
<FluentButton OnClick="RunForSomeTime" IconEnd="new Icons.Regular.Size16.Add()">Test</FluentButton>
<FluentProgressRing Visible="@progressIsVisible"></FluentProgressRing>

@code {
    private int currentCount = 0;
    private bool progressIsVisible = false;

    private void IncrementCount()
    {
        currentCount++;
    }

    async Task RunForSomeTime()
    {
        progressIsVisible = true;
        await Task.Delay(1000);
        progressIsVisible = false;
    }
}
